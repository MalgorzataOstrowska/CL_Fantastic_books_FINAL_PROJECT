{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                <label for="username">{{ 'security.login.username'|trans }}<b>:</b> </label>
            </div>
            <div class="col-sm-2">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-2">
                <label for="password">{{ 'security.login.password'|trans }}</label>
            </div>
            <div class="col-sm-2">
                <input type="password" id="password" name="_password" required="required" />
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-2">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
    </div>

    {% if error %}
    <div class="row">
        <div class="col-sm-4 alert alert-danger alert-dismissable">
            <a class="close" data-dismiss="alert" aria-label="close">Ã—</a>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    </div>
    {% endif %}
    <div class="row">
        <div class="col-sm-4 text-center">
            <button type="submit" class="btn btn-default" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
            {#<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />#}
        </div>
    </div>
</form>
