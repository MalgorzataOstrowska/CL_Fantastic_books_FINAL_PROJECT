{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author_book</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author_Book.id }}</td>
            </tr>
            <tr>
                <th>Series</th>
                <td>{{ author_Book.series }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ author_Book.volume }}</td>
