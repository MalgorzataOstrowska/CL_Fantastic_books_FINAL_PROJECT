{% extends 'base.html.twig' %}

{% block body %}
    <h1>Author_book creation</h1>

    {{ form_start(form, {'attr': {'id': 'submitCreate'}}) }}
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    {{ form_label(form.series) }}<b>:</b>
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.series) }}
                </div>
                <div class="col-sm-4">
                    {{ form_errors(form.series) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_label(form.volume) }}<b>:</b>
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.volume) }}
                </div>
                <div class="col-sm-4">
                    {{ form_errors(form.volume) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_label(form.author) }}<b>:</b>
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.author) }}
                </div>
                <div class="col-sm-4">
                    {{ form_errors(form.author) }}
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_label(form.book) }}<b>:</b>
                </div>
                <div class="col-sm-3">
                    {{ form_widget(form.book) }}
                </div>
                <div class="col-sm-4">
                    {{ form_errors(form.book) }}
                </div>
            </div>
            <br>
        </div>

        <input type="submit" value="Create" />

    {{ form_end(form) }}

{% endblock %}


{% block sidenav %}

    <div class="inner_sidenav">
        <div class="btn-group-vertical btn-block">
            <button id="buttonCreate" type="button" class="btn btn-primary">Create</button>

            <a type="button" class="btn btn-primary" href="{{ path('editor_author_book_index') }}">
                Back to the list
            </a>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src={{ asset('bundles/fantasticbooks/js/sidenav.js') }}></script>
{% endblock %}