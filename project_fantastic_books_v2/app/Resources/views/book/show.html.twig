{% extends 'base.html.twig' %}

{% block body %}
    <h1>Book</h1>

    <table  class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Titlepolish'| trans }}</th>
                <td>{{ book.titlePolish }}</td>
            </tr>
            <tr>
                <th>{{ 'Titleenglish'| trans }}</th>
                <td>{{ book.titleEnglish }}</td>
            </tr>
            <tr>
                <th>{{ 'Titleoriginal'| trans }}</th>
                <td>{{ book.titleOriginal }}</td>
            </tr>
        </tbody>
    </table>


    <h1>Characters:</h1>
    <table  class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>{{ 'name'| trans }}</th>
                <th>{{ 'characterType'| trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for character in characterForm %}
                <tr>
                    <td>
                        <a href="{{ path('editor_characterfrombook_show',
                        { 'id': character.id }) }}">{{ character.name }}</a>
                    </td>

                    <td>{{ character.characterType }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <ul>
        <li>
            <a href="{{ path('editor_book_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('editor_book_edit', { 'id': book.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
