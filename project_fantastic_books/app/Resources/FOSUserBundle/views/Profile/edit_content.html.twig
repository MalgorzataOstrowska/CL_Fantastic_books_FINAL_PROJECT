{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">
                {{ form_label(form.username) }}<b>:</b>
            </div>
            <div class="col-sm-2">
                {{ form_widget(form.username) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-2">
                {{ form_label(form.email) }}<b>:</b>
            </div>
            <div class="col-sm-2">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-2">
                {{ form_label(form.current_password) }}<b>:</b>
            </div>
            <div class="col-sm-2">
                {{ form_widget(form.current_password) }}
            </div>
            <div class="col-sm-4">
                {{ form_errors(form.current_password) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4 text-center">
            <button type="submit" class="btn btn-default" id="_submit" name="_submit">{{ 'profile.edit.submit'|trans }}</button>
        </div>
    </div>

{{ form_end(form) }}
