{% extends 'base.html.twig' %}
{% block sidenav %}

    <a href="{{ path('editor_author_new') }}">Create a new author</a>
{% endblock %}
{% block body %}
    <h1>Authors list</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Alias</th>
                <th>Linktohomepage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td><a href="{{ path('editor_author_show', { 'id': author.id }) }}">{{ author.id }}</a></td>
                <td>{{ author.firstName }}</td>
                <td>{{ author.lastName }}</td>
                <td>{{ author.alias }}</td>
                <td><a href="{{ author.linkToHomePage }}">{{ author.linkToHomePage }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('editor_author_show', { 'id': author.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('editor_author_edit', { 'id': author.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
