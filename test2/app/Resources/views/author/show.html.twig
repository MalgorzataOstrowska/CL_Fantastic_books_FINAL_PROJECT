{% extends 'base.html.twig' %}

{% block sidenav %}

    <a href="{{ path('editor_author_index') }}">Back to the list</a>

    <br>
    <a href="{{ path('editor_author_edit', { 'id': author.id }) }}">Edit</a>

    {{ form_start(delete_form) }}
    <button class="btn btn-default" type="submit" name="submit">
        Delete <span class="glyphicon glyphicon-remove"></span></button>
    {{ form_end(delete_form) }}

{% endblock %}
{% block body %}

    <div class="col-sm-10 text-left">
    <h1>Author</h1>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ author.alias }}</td>
            </tr>
            <tr>
                <th>Linktohomepage</th>
                <td><a href="{{ author.linkToHomePage }}">{{ author.linkToHomePage }}</a></td>
            </tr>
        </tbody>
    </table>
    </div>

{% endblock %}
