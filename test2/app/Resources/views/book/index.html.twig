{% extends 'base.html.twig' %}

{% block body %}
    <h1>Books list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titlepolish</th>
                <th>Titleenglish</th>
                <th>Titleoriginal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('editor_book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                <td>{{ book.titlePolish }}</td>
                <td>{{ book.titleEnglish }}</td>
                <td>{{ book.titleOriginal }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('editor_book_show', { 'id': book.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('editor_book_edit', { 'id': book.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('editor_book_new') }}">Create a new book</a>
        </li>
    </ul>
{% endblock %}
